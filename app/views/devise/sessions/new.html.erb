<%# LOGIN FORM %>
<section class="relative min-h-[100vh] flex items-center overflow-hidden lg:min-h-[85vh]">
  <!-- Background Image -->
  <img src="<%= asset_path("driving.webp") %>" alt="Camionista alla guida" class="absolute inset-0 w-full h-full object-cover object-[40%]"/>
  
  <!-- Dark overlay -->
  <div class="absolute inset-0 bg-black/60"></div>

  <div class="max-w-[1200px] mx-auto w-full px-8 relative z-10 text-white lg:px-0">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between lg:gap-16">
      
      <!-- Left content (can be left empty or add intro text) -->
      <div class="mb-8 lg:mb-0 lg:max-w-lg lg:flex-shrink-0">
        <h2 class="text-4xl mb-4 lg:text-6xl lg:mb-6">Accedi</h2>
        <p class="text-lg lg:text-xl">Accedi al tuo account per continuare.</p>
      </div>

      <!-- Right content - Login Form -->
      <div class="w-full lg:max-w-lg lg:flex-shrink-0">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
          
          <!-- Email Field -->
          <div class="form-control">
            <%= f.email_field :email,
                               autofocus: true,
                               autocomplete: "email",
                               placeholder: "Email",
                               required: true,
                               class: "w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder-white/70 focus:border-white/50 focus:bg-white/15 focus:outline-none transition-all duration-200" %>
          </div>

          <!-- Password Field -->
          <div class="form-control">
            <%= f.password_field :password,
                                 autocomplete: "current-password",
                                 placeholder: "Password",
                                 required: true,
                                 class: "w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder-white/70 focus:border-white/50 focus:bg-white/15 focus:outline-none transition-all duration-200" %>
          </div>

          <!-- Remember Me Checkbox -->
          <% if devise_mapping.rememberable? %>
            <div class="hidden checked form-control items-center gap-3 pt-2">
              <%= f.check_box :remember_me, 
                               class: "checkbox checkbox-primary bg-white/10 border-white/20 focus:border-white" %>
              <span class="text-base font-medium text-white">Resta connesso</span>
            </div>
          <% end %>

          <!-- Submit Button -->
          <div>
            <%= f.submit "Accedi",
                         class: "translate-x-[2px] w-full px-6 py-3 bg-brand text-black font-semibold border border-black shadow-[-4px_4px_0_0_#FFF] transition-all duration-150 hover:translate-x-[-4px] hover:translate-y-[4px] hover:shadow-none cursor-pointer active:translate-x-[-4px] active:translate-y-[4px] active:shadow-none" %>
          </div>
        <% end %>

        <!-- Devise Shared Links -->
        <div class="mt-6 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
