<%# LOGIN FORM %>
<div class="relative h-[80vh] px-4 md:px-8">
  <!-- Background Image -->
  <div class="absolute inset-0 bg-cover bg-[40%]" style="background-image: url(<%= asset_path('driving.webp') %>);"></div>

  <!-- Dark Overlay -->
  <div class="absolute inset-0 bg-black opacity-60"></div>

  <!-- Content -->
  <div class="relative flex flex-col justify-center md:flex-row h-full text-white">
    <!-- Left blank space -->
    <div class="hidden md:block md:w-1/2"></div>

    <!-- Right content -->
    <div class="flex flex-col justify-center items-left w-full md:w-1/2 px-4 md:px-8 lg:px-12">
      <h1 class="text-4xl font-bold mb-8">Accedi</h1>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full max-w-lg" }) do |f| %>
        <div class="space-y-2 w-full">
          <!-- Email Field -->
          <div class="form-control">
            <%= f.label :email, class: "label justify-start pb-2" do %>
              <span class="label-text text-base font-semibold text-lg">Email</span>
            <% end %>
            <%= f.email_field :email, 
                               autofocus: true, 
                               autocomplete: "email",
                               class: "input input-bordered w-full bg-white/5 backdrop-blur-md border-white/20 text-white placeholder-white/50 focus:border-white focus:bg-white/10 focus:outline-none transition-all duration-200",
                               placeholder: "email@email.com", 
                               required: true %>
          </div>

          <!-- Password Field -->
          <div class="form-control">
            <%= f.label :password, class: "label justify-start pb-2" do %>
              <span class="label-text text-base font-semibold text-lg">Password</span>
            <% end %>
            <%= f.password_field :password, 
                                 autocomplete: "current-password",
                                 class: "input input-bordered w-full bg-white/5 backdrop-blur-md border-white/20 text-white placeholder-white/50 focus:border-white focus:bg-white/10 focus:outline-none transition-all duration-200",
                                 placeholder: "password", 
                                 required: true %>
          </div>

          <!-- Remember Me Checkbox -->
          <% if devise_mapping.rememberable? %>
            <div class="form-control">
              <label class="label cursor-pointer justify-start gap-3 pt-4">
                <%= f.check_box :remember_me, 
                                 class: "checkbox checkbox-primary bg-white/5 border-white/20 focus:border-white" %>
                <span class="label-text text-base font-semibold text-white">Resta connesso</span>
              </label>
            </div>
          <% end %>

          <!-- Submit Button -->
          <div class="pt-2">
            <%= f.submit "Log in",
                         class: "btn w-full" %>
          </div>
        </div>
      <% end %>

      <!-- Devise Shared Links -->
      <div class="mt-6 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>