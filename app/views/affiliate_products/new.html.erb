<section class="relative min-h-[100vh] flex items-center justify-center overflow-hidden bg-navy px-6">
  <!-- Decorative blobs -->
  <div class="blob w-80 h-80 bg-violet/25 -top-20 right-10"></div>
  <div class="blob w-64 h-64 bg-brand/20 bottom-20 -left-20"></div>

  <div class="relative z-10 w-full max-w-lg pt-24 pb-12">
    <div class="text-center mb-8">
      <h2 class="text-4xl text-white mb-3">Nuovo Prodotto</h2>
      <p class="text-white/50">Inserisci i dettagli del prodotto affiliato da aggiungere.</p>
    </div>

    <div class="glass-card rounded-3xl p-8">
      <%= form_with model: @affiliate_product, class: "space-y-5" do |form| %>

        <div>
          <%= form.label :title, "Titolo del prodotto", class: "block text-sm font-medium text-white/70 mb-1.5" %>
          <%= form.text_field :title,
                              class: "w-full px-5 py-3.5 bg-white/10 border border-white/15 text-white placeholder-white/40 rounded-xl focus:border-brand/50 focus:bg-white/15 focus:outline-none focus:ring-2 focus:ring-brand/20 transition-all",
                              placeholder: "es. DJI Osmo Pocket 3",
                              required: true %>
        </div>

        <div>
          <%= form.label :affiliate_url, "Link affiliato Amazon", class: "block text-sm font-medium text-white/70 mb-1.5" %>
          <%= form.text_field :affiliate_url,
                              class: "w-full px-5 py-3.5 bg-white/10 border border-white/15 text-white placeholder-white/40 rounded-xl focus:border-brand/50 focus:bg-white/15 focus:outline-none focus:ring-2 focus:ring-brand/20 transition-all",
                              placeholder: "es. https://amzn.eu/d/8aD...",
                              required: true %>
        </div>

        <div>
          <%= form.label :image_url, "URL immagine prodotto", class: "block text-sm font-medium text-white/70 mb-1.5" %>
          <%= form.text_field :image_url,
                              class: "w-full px-5 py-3.5 bg-white/10 border border-white/15 text-white placeholder-white/40 rounded-xl focus:border-brand/50 focus:bg-white/15 focus:outline-none focus:ring-2 focus:ring-brand/20 transition-all",
                              placeholder: "es. https://m.media-amazon.com/images/I/81phR...",
                              required: true %>
        </div>

        <div>
          <%= form.submit "Crea prodotto", class: "btn-primary w-full py-3.5 text-base" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
