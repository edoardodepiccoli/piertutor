<%# CREATE PRODUCT FORM %>
<section class="relative min-h-[100vh] flex items-center overflow-hidden lg:min-h-[85vh]">
  <!-- Background Image -->
  <img src="<%= asset_path("driving.webp") %>" alt="Camionista alla guida" class="absolute inset-0 w-full h-full object-cover object-[40%]"/>
  
  <!-- Dark overlay -->
  <div class="absolute inset-0 bg-black/60"></div>

  <div class="max-w-[1200px] mx-auto w-full px-8 relative z-10 text-white lg:px-0">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between lg:gap-16">
      
      <!-- Left content -->
      <div class="mb-8 lg:mb-0 lg:max-w-md lg:flex-shrink-0">
        <h2 class="text-4xl mb-4 lg:text-6xl lg:mb-6">Crea un prodotto</h2>
        <p class="text-lg lg:text-xl">Inserisci i dettagli del prodotto affiliato da aggiungere.</p>
      </div>

      <!-- Right content - Form -->
      <div class="w-full lg:max-w-lg lg:flex-shrink-0">
        <%= form_with model: @affiliate_product, class: "space-y-4" do |form| %>
          
          <!-- Titolo -->
          <div class="form-control">
            <%= form.text_field :title,
                                class: "w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder-white/70 focus:border-white/50 focus:bg-white/15 focus:outline-none transition-all duration-200",
                                placeholder: "DJI Osmo Pocket 3",
                                required: true %>
          </div>

          <!-- Link Affiliato -->
          <div class="form-control">
            <%= form.text_field :affiliate_url,
                                class: "w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder-white/70 focus:border-white/50 focus:bg-white/15 focus:outline-none transition-all duration-200",
                                placeholder: "https://amzn.eu/d/8aD...",
                                required: true %>
          </div>

          <!-- Link Immagine -->
          <div class="form-control">
            <%= form.text_field :image_url,
                                class: "w-full px-4 py-3 bg-white/10 backdrop-blur-sm border border-white/20 text-white placeholder-white/70 focus:border-white/50 focus:bg-white/15 focus:outline-none transition-all duration-200",
                                placeholder: "https://m.media-amazon.com/images/I/81phR....",
                                required: true %>
          </div>

          <!-- Submit Button -->
          <div>
            <%= form.submit "Crea prodotto",
                            class: "translate-x-[2px] w-full px-6 py-3 bg-brand text-black font-semibold border border-black shadow-[-4px_4px_0_0_#FFF] transition-all duration-150 hover:translate-x-[-4px] hover:translate-y-[4px] hover:shadow-none cursor-pointer active:translate-x-[-4px] active:translate-y-[4px] active:shadow-none" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
