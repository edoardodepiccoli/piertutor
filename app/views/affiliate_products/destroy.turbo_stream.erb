<%= turbo_stream.replace "highlighted_products_section" do %>
  <%= render partial: "highlighted_products_section", locals: { reveal: false } %>
<% end %>

<%= turbo_stream.replace "regular_products_section" do %>
  <%= render partial: "regular_products_section", locals: { reveal: false } %>
<% end %>

<%= turbo_stream.append "flash_messages" do %>
  <div data-controller="flash" data-flash-duration-value="3000"
       class="flex items-center gap-3 px-5 py-3 rounded-xl border-l-4 border-l-brand bg-yellow-50 text-navy
              shadow-lg transform transition-all duration-500 ease-in-out
              translate-y-full opacity-0 max-w-sm">
    <span class="text-sm font-semibold">Prodotto eliminato</span>
  </div>
<% end %>
