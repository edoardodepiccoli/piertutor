    <div id="flash_messages" class="fixed bottom-6 right-6 flex flex-col items-end space-y-3 z-50">
      <% flash.each do |type, message| %>
        <% next if message.blank? %>

        <% accent =
          case type.to_sym
          when :success then "border-l-green-500 bg-green-50 text-green-800"
          when :error then "border-l-coral bg-red-50 text-red-800"
          else "border-l-violet bg-violet/10 text-navy"
          end
        %>

        <div
          data-controller="flash"
          data-flash-duration-value="3000"
          class="flex items-center gap-3 px-5 py-3 rounded-xl border-l-4 <%= accent %>
                 shadow-lg transform transition-all duration-500 ease-in-out
                 translate-y-full opacity-0 max-w-sm"
        >
          <span class="text-sm font-semibold"><%= message %></span>
        </div>
      <% end %>
    </div>

